<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-extend="CrashManager.error">
        <t t-jquery=".alert p b" t-operation="inner">
            An error occurred during the execution of an automated action
        </t>
        <t t-jquery=".alert" t-operation="append">
            <p>
                The automated action causing an issue is the action "<t t-esc="widget.options.base_automation_name"/>" (#<t t-esc="widget.options.base_automation_id"/>).<br/>
                You can disable the action or edit it to solve the issue.
            </p>
        </t>
        <t t-jquery=".alert button" t-operation="after">
            <button class="btn btn-secondary ml8 o_disable_action_button" style="margin-top: 5px;">
                <i class="fa fa-ban mr8"/>Disable Action
            </button>
            <button class="btn btn-secondary ml8 o_edit_action_button" style="margin-top: 5px;">
                <i class="fa fa-edit mr8"/>Edit action
            </button>
        </t>
    </t>
</templates>
