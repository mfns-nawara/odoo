<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="website_crm.default_crm_form">
        <t t-set="field" t-value="{}"/>
        <t t-set="field.formatInfo" t-value="{}"/>
        <t t-set="field.formatInfo.labelPosition" t-value="'left'"/>
        <t t-set="field.formatInfo.labelWidth" t-value="'200px'"/>

        <t t-set="field.required" t-value="true"/>
        <t t-set="field.name" t-value="'contact_name'"/>
        <t t-set="field.string" t-value="'Your Name'"/>
        <t t-call="website_form.field_char"/>

        <t t-set="field.required" t-value="false"/>
        <t t-set="field.name" t-value="'phone'"/>
        <t t-set="field.string" t-value="'Phone Number'"/>
        <t t-call="website_form.field_char"/>

        <t t-set="field.required" t-value="true"/>
        <t t-set="field.name" t-value="'email_from'"/>
        <t t-set="field.string" t-value="'Email'"/>
        <t t-call="website_form.field_email"/>

        <t t-set="field.name" t-value="'partner_name'"/>
        <t t-set="field.string" t-value="'Your Company'"/>
        <t t-call="website_form.field_char"/>

        <t t-set="field.required" t-value="false"/>
        <t t-set="field.modelRequired" t-value="true"/>
        <t t-set="field.name" t-value="'name'"/>
        <t t-set="field.string" t-value="'Subject'"/>
        <t t-call="website_form.field_char"/>

        <t t-set="field.required" t-value="true"/>
        <t t-set="field.modelRequired" t-value="false"/>
        <t t-set="field.name" t-value="'description'"/>
        <t t-set="field.string" t-value="'Your Question'"/>
        <t t-call="website_form.field_text"/>
    </t>

</templates>
