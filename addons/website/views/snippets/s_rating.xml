<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_rating" name="Rating">
    <div data-vcss="001" data-icon="star" data-active-icon-color="black" data-inactive-icon-color="black" class="s_rating s_rating_1x pt16 pb16">
        <h4 class ="s_rating_title">Quality</h4>
        <div class="s_rating_icons o_not_editable">
            <i data-icon-active="true" class="rating_icon fa fa-fw fa-star"/>
            <i data-icon-active="true" class="rating_icon fa fa-fw fa-star"/>
            <i data-icon-active="true" class="rating_icon fa fa-fw fa-star"/>
            <i data-icon-active="false" class="rating_icon fa fa-fw fa-star-o"/>
            <i data-icon-active="false" class="rating_icon fa fa-fw fa-star-o"/>
        </div>
    </div>
</template>

<template id="s_rating_options" inherit_id="website.snippet_options">
    <xpath expr="." position="inside">
        <div data-js="Rating" data-selector=".s_rating">
            <we-select string="Icon">
                <we-button data-set-icons="star"><i class="fa fa-fw fa-star"/> Stars</we-button>
                <we-button data-set-icons="thumbs-up"><i class="fa fa-fw fa-thumbs-up"/> Thumbs</we-button>
                <we-button data-set-icons="circle"><i class="fa fa-fw fa-circle"/> Circles</we-button>
                <we-button data-set-icons="square"><i class="fa fa-fw fa-square"/> Squares</we-button>
                <we-button data-set-icons="heart"><i class="fa fa-fw fa-heart"/> Hearts</we-button>
                <we-button data-set-icons="custom" class="d-none">Custom</we-button>
            </we-select>
            <we-row string="Active Icon" class="o_we_inline">
                <we-colorpicker
                    data-attribute-name="activeIconColor"
                    data-select-data-attribute=""
                    data-set-icon-color ="true"
                    data-excluded="transparent_grayscale"/>
                <we-button class="fa fa-fw fa-edit" data-custom-icon="true" data-custom-active-icon="true" data-no-preview="true"></we-button>
            </we-row>
            <we-row string="Inactive Icon" class="o_we_inline">
                <we-colorpicker
                    data-attribute-name="inactiveIconColor"
                    data-select-data-attribute=""
                    data-set-icon-color ="true"
                    data-excluded="transparent_grayscale"/>
                <we-button class="fa fa-fw fa-edit" data-custom-icon="true" data-custom-active-icon="false" data-no-preview="true"></we-button>
            </we-row>
            <we-row string="Value" class="o_we_inline">
                <we-input data-active-icons-number="true"/><span>/</span>
                <we-input data-total-icons-number="true"/>
            </we-row>
            <we-select string="Size">
                <we-button data-select-class="s_rating_1x">Small</we-button>
                <we-button data-select-class="s_rating_2x">Medium</we-button>
                <we-button data-select-class="s_rating_3x">Big</we-button>
            </we-select>
            <we-checkbox string="Display Inline" data-select-class="s_rating_inline"/>
        </div>
    </xpath>
</template>

<template id="assets_snippet_s_rating_css_000" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/scss" href="/website/static/src/snippets/s_rating/000.scss"/>
    </xpath>
</template>

<template id="assets_snippet_s_rating_css_001" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/scss" href="/website/static/src/snippets/s_rating/001.scss"/>
    </xpath>
</template>

</odoo>
