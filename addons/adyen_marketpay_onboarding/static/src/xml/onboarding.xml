<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="adyen_marketpay_onboarding.business_shareholder">
        <div class="list-group-item o_adyen_business_shareholder">
            <i class="fa fa-times float-right o_adyen_delete_shareholder_button"/>

            <label for="first_name">First Name</label>
            <input type="text" name="first_name" class="form-control"/>

            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" class="form-control"/>

            <label for="gender">Gender</label>
            <select name="gender" class="form-control" data-placeholder="Legal Entity">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="unknown">Other</option>
            </select>

            <label for="email">Email</label>
            <input type="email" name="email" class="form-control"/>

            <label for="country_id">Country</label>
            <select name="country_id" class="form-control" data-placeholder="Select a country">
                <t t-foreach="countries" t-as="country">
                    <option t-att-value="country.id"><t t-esc="country.name"/></option>
                </t>
            </select>
        </div>
    </t>

    <t t-name="adyen_marketpay_onboarding.store">
        <div class="list-group-item o_adyen_store">
            <i class="fa fa-times float-right o_adyen_delete_store_button"/>

            <label for="street">Street</label>
            <input type="text" name="street" class="form-control"/>

            <label for="house_number_or_name">Houde Number or Name</label>
            <input type="text" name="house_number_or_name" class="form-control"/>

            <label for="postal_code">Postal Code</label>
            <input type="text" name="postal_code" class="form-control"/>

            <label for="city">City</label>
            <input type="text" name="city" class="form-control"/>

            <label for="state">State</label>
            <input type="text" name="state" class="form-control"/>

            <label for="country_id">Country</label>
            <select name="country_id" class="form-control" data-placeholder="Select a country">
                <t t-foreach="countries" t-as="country">
                    <option t-att-value="country.id"><t t-esc="country.name"/></option>
                </t>
            </select>
        </div>
    </t>
</templates>
